<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_row"

    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_adpater_Title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_frangment_title"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

    <TextView
        android:id="@+id/tv_recycler_tensach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_adpater_Title"
        android:layout_toRightOf="@+id/img_adpater_Title"
        android:text="Tên sách"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_recycler_MaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recycler_tensach"
        android:layout_toLeftOf="@+id/tv_recycler_soluong"
        android:layout_toRightOf="@+id/img_adpater_Title"
        android:text="Mã sách"
       />

    <TextView
        android:id="@+id/tv_recycler_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_recycler_tensach"
        android:text="10"
        android:textStyle="bold" />
</RelativeLayout>